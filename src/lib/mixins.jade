mixin workImage(img, description)
  .col-xs-4.col-thumbnail
    a.thumbnail(href='img/work/' + img)
      img(src='img/work/thumbs/' + img)
    if description
      .caption
        p #{description}

mixin menuItem(text, uri, active)
  if uri == active
    li.active
      a(href=uri) #{text}
  else
    li
      a(href=uri) #{text}
  
