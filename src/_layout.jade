include _mixins

- var title, currentPage;

include _globals
block variables
-
  var containerClass = 'container container-main clearfix'
  if(pages[currentPage].containerClass) {
    containerClass += ' ' + pages[currentPage].containerClass;
  }
  var bodyClass = pages[currentPage].bodyClass || '';

doctype html
html(lang=en)
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='favicon.ico')
    title #{pages[currentPage].title}
    link(href='css/bootstrap.css', rel='stylesheet')
    link(href='css/bootstrap-theme.css', rel='stylesheet')
    link(href='css/harea.css', rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext' rel='stylesheet' type='text/css')
    // link(href='https://fonts.googleapis.com/css?family=Cinzel+Decorative' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Forum' rel='stylesheet' type='text/css')
    // Just for debugging purposes. Don't actually copy these 2 lines!
    //if lt IE 9
      script(src='../../assets/js/ie8-responsive-file-warning.js')
    script(src='../../assets/js/ie-emulation-modes-warning.js')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body(class=bodyClass)
    include _navigation 
    .row.row-main
      div(class=containerClass)
        .wrapper.clearfix
          .col-sm-3.left-column
            .logo
              img(src='img/logo.png')
            .info-container
              h1 Harea Construction Ltd
              h5 brickwork specialists
              +verticalMenu
              .info.info-company
                p We have over 10 years of experience providing high quality building services for:
                ul(info='')
                  li.important modern houses
                  li.important appartment blocks
                  li.important warehouses and other commercial buildings
                  li.important foundations
                  li.important garden walls
                  li.important
                    | many more. Please feel free to
                    a(href="contact.html") &nbsp;contact&nbsp;
                    | us for details.
          .col-sm-9.right-column
            block body
          include _footer
